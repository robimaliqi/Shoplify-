<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= button_to "Buy now!", checkout_create_path, params: {id: product.id}, remote: true %></td>
    </tr>
    <p>
      <%= link_to "Show this product", product %>
    </p>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
