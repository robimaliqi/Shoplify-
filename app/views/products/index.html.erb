<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Payment</th>
      <th>Sales Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>


<tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= number_to_currency(product.price/100) %></td>

      <td><%= button_to "Buy now!", checkout_create_path, params: {id: product.id}, method: :post, data: { turbo: false } %></td>
      <td><%= product.sales_count %>
      <td><%= link_to 'Show', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destory', product, method: :delete, data: { confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
</tbody>
</table>

<br>

